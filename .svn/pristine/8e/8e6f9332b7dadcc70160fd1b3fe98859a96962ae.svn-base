/*recipes*/
#reciep-wrapper {
}

    #reciep-wrapper div.ShoppingList {
        float: left;
        width: 350px;
        margin-right: 10px;
        margin-top: 38px;
    }

#ShoppingList div.check input {
    border-color: #8dac34;
}

#reciep-wrapper div.recipes {
    float: right;
    width: 600px;
}
#reciep-wrapper div.header {
    height: 120px;
}
    #reciep-wrapper div.header div.top {
        margin-top: 40px;
        margin-bottom: 18px;
        padding: 0px;
        padding-right: 2px;
        margin-left: auto;
        margin-right: auto;
        font-size: 1.3em;
        text-align: justify;
    }
#reciep-wrapper div.body {
    /*margin-top: 20px;*/
}

#reciep-wrapper div.recipe_box {
    height: 160px;
    width: 600px;
    margin-bottom: 30px;
    font-size: 12px;
    background-color: white;
    overflow-y: auto;
    background-image: none;
}

    #reciep-wrapper div.recipe_box div.body {
        clear: both;
        height: 133px;
        padding-right: 12px;
        padding-left: 12px;
        padding-top: 20px;
    }

#reciep-wrapper div.recipe_list div.recipe_main_category {
    width: 100%;
}

#reciep-wrapper div.recipe_list div.recipe_inner_box {
    width: 100%;
    float: none;
}

#reciep-wrapper div.recipe_list div.recipe_thumbnail_box {
    margin-top: -50px;
    margin-left: 3px;
}

#reciep-wrapper div.recipe_list div.recipe_tags {
    display: none;
}

#reciep-wrapper div.recipe_list div.recipe_description {
    display: none;
}

#reciep-wrapper div.recipe_list div.pager {
    text-align: center;
    margin-right: 50px;
}

#reciep-wrapper div.recipe_list div.published_date {
    display: none;
}

#reciep-wrapper div.recipe_list div.recipe_title a {
    font-size: 1.6em;
}

#reciep-wrapper div.recipe_list div.recipe_actions_box {
    /*margin-left: 6px;*/
    font-size: 1.3em;
}



/*Recipes*/
#recipe_list div.recipe_inner_box {
    width: 50%;
}

#recipe_list div.recipe_actions_box {
    display: none;
}

#recipe_list div.recipe_tags {
    display: none;
}

#recipe_list div.recipe_description {
    display: none;
}

#recipe_list div.pager {
    width: 100%;
    text-align: center;
}

#recipes_filter {
    color: #656565;
    font-weight: bold;
    text-align: right;
    height:60px;
}

    #recipes_filter a {
        text-decoration: underline;
        color: #656565;
    }

        #recipes_filter a:hover {
            text-decoration: none;
            cursor: pointer;
        }

#recipes_sort_by_box {
    float: right;
    margin-top: 18px;
}
