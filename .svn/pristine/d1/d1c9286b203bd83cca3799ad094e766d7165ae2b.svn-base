.MenuRecipeModalPopup 
{
    background-image: url('../../Images/bgr_DialogBoxAddRecipeToMenu.png');
    background-repeat: no-repeat;
    color:#656565;    
}
#mealRecipeModalPopupTitle
{
    clear: both;    
    color:White;
    height:15px; 
    font-weight:bold;
    font-size:14px;    
    padding:12px 22px 10px 4px;      
}

.lblChooseMealRecipeName
{
    color:#F1A211;
    font-weight:bold;
    font-size:14px;    
}

.menuCategoriesModalPopup
{
    border:1px solid #F4A612;
    background-color:White;
    width:370px; 
    padding:3px;     
}

.pnlMenuCategoriesTitle
{
    cursor: move; 
    background-color: #F4A612;
    color: White; 
    height: 21px;
    padding-top:3px;
}
.pnlCategoriesList
{
    width:358px;
    height:330px;
    padding:0px 5px 0px 5px;
    border:1px solid #D3D3D3;    
}

#newRecipe_top {
    background-image: url('../../Images/bgr_BoxIndex_Top.png');
    background-position: right;
    background-repeat: no-repeat;
    height: 6px;    
}
#newRecipe_middle {
    background-image: url('../../Images/bgr_BoxIndex_Middle.png');
    background-repeat: repeat-y;
    background-position: right;
    padding: 26px 22px 24px 22px;
    color:#656565;
}
#newRecipe_bottom {
    background-image: url('../../Images/bgr_BoxIndex_Bottom.png');
    background-repeat: no-repeat;
    background-position: right;
    height: 8px;    
}
.newRecipe_TxtBox_wm {
    color:#656565;
    font-weight:bold;    
}

.modalBackground2 {
	background-color:Gray;
